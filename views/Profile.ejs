<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="css/Profile.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <title>Image Generation</title>
</head>

<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Navigation Bar -->
      <div class="col-2 p-4">
        <div class="nav-bar">
          <p style="color: aliceblue; padding-top: 15px;">Image Generator</p>
          <div class="nav-item" onclick="goToHome()">
            <i class="fa-solid fa-house"></i>
            <span>Home</span>
          </div>
          <div class="nav-item" onclick="goToLibrary()">
            <i class="fa-solid fa-icons"></i>
            <span>Library</span>
          </div>
          <div class="nav-item" onclick="goToImageGen()">
            <i class="fa-regular fa-image"></i>
            <span>Image Generation</span>
          </div>
          <div class="nav-item" onclick="goToUpgradePlan()">
            <i class="fa-solid fa-basket-shopping"></i>
            <span>Upgrade Plan</span>
          </div>
          <div class="nav-item" onclick="goToSetting()">
            <i class="fa-solid fa-gear"></i>
            <span>Setting</span>
          </div>
        </div>
      </div>

      <!-- Main Content Area -->
      <div class="col-10 p-4" style="margin-left: 350px;">
        <!-- Profile Section -->
        <div class="profile-card d-flex align-items-center">
          <img src="https://via.placeholder.com/100" alt="Avatar" class="avatar">
            <div class="profile-info" style="padding-left: 20px;">
              <h3 class="text-white">Username</h3>
              <p class="text-white">Digital Creator</p>
              <p class="text-white">10 Generations</p>
            </div>
        </div>

        <!-- Generations Section -->
        <div class="generations-card mt-4">
          <h5>Generations</h5>
          <div class="row" id="generation-row">
            <!-- Images will be dynamically inserted here -->
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const imageUrls = [
        { url: 'https://via.placeholder.com/265', alt: 'Generation 1' },
        { url: 'https://via.placeholder.com/265', alt: 'Generation 2' },
        { url: 'https://via.placeholder.com/265', alt: 'Generation 3' },
        { url: 'https://via.placeholder.com/265', alt: 'Generation 4' },
        { url: 'https://via.placeholder.com/265', alt: 'Generation 5' },
        { url: 'https://via.placeholder.com/265', alt: 'Generation 6' },
      ];

      const generationRow = document.getElementById('generation-row');

      imageUrls.forEach(image => {
        const imgElement = document.createElement('div');
        imgElement.className = 'col-3 generation-item';
        imgElement.innerHTML = `<img src="${image.url}" alt="${image.alt}" class ="img-fluid">`;
        generationRow.appendChild(imgElement);
      });
    });

    function goToHome() {
      window.location.href = '/mainpage';
    }

    function goToLibrary() {
      window.location.href = '/library';
    }

    function goToImageGen() {
      window.location.href = '/imagegen';
    }

    function goToUpgradePlan() {
      window.location.href = '/upgradeplan';
    }

    function goToSetting() {
      window.location.href = '/setting';
    }
  </script>
</body>

</html>
